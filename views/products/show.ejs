<% layout('layout/boilerplate.ejs') %>

<div class="row">
    <div class="col-lg-6 d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <img src="<%=product.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <h5 class="card-title"><%=product.price%></h5>
              <p class="card-text"><%=product.desc%></p>
              <a href="/products/<%=product._id%>" class="btn btn-primary">SHOW</a>
              <a href="/product/<%=product._id %>/edit" class="btn btn-warning">Edit</a>
              <a href="/product/<%=product._id %>/delete" class="btn btn-danger">Delete</a>
            </div>
          </div>
    </div>
    <div class="col-lg-6">
        <h1>ALL reviews</h1>
        <form action="/products/<%=product._id%>/review" method="post">
          <!-- <input type="range" min="0" max="5" name="rating"><br> -->
          <fieldset class="starability-basic"> 
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <textarea cols="30" rows="3" name="comment"></textarea>
          <br>
          <button class="btn btn-primary">Submit</button>
        </form>
        <%for(let review of product.reviews){%>
            <div class="card mt-3">
              <p class="card-title">
                <!-- <%=review.rating%> -->
                <p class="starability-result" data-rating="<%=review.rating%>">
                  Rated: 3 stars
                </p>
              </p>
              <p class="card-body">
                <%=review.comment%>
              </p>
            </div>
       <% } %>
    </div>
</div>